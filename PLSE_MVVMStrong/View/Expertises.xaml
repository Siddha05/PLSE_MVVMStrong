<Window x:Class="PLSE_MVVMStrong.View.Expertises"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:PLSE_MVVMStrong.ViewModel"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:local="clr-namespace:PLSE_MVVMStrong.View"
        mc:Ignorable="d"
        Title="Expertises" Width="1880" ResizeMode="CanMinimize" Height="1000">
    <Window.DataContext>
        <viewmodel:ExpertisesVM/>
    </Window.DataContext>
    <Window.Resources>
        <viewmodel:ExpertiseLinkConverter x:Key="ExpLinkConv"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DataGrid Margin="2" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" Background="White"
                  ItemsSource="{Binding Path=ExpertiseList}" GridLinesVisibility="None" BorderBrush="#FF0097FF" ColumnHeaderStyle="{StaticResource DGColumnsHeader}"
                  RowStyle="{StaticResource DGRowStyle}" CellStyle="{StaticResource DGCellStyle}" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <DataGrid.RowDetailsTemplate>
                <DataTemplate DataType="ResEx">
                    <Grid HorizontalAlignment="Stretch" Margin="40,15,0,2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Style="{x:Null}" Text="Экспертиза" HorizontalAlignment="Center" Margin="0,0,0,5" FontSize="{StaticResource RegularFontSize}" FontWeight="Medium"/>
                        <TextBlock Grid.Row="1" Style="{x:Null}" FontSize="14" FontWeight="Normal">
                            <Run Text="{Binding Path=Expertise.Inwork, StringFormat='Дней в работе: {0}', Mode=OneWay}"/>
                            <LineBreak/>
                            <Run Text="{Binding Path=Expertise.EndDate, StringFormat='Дата сдачи: {0}', Mode=OneWay}"/>
                            <LineBreak/>
                            <Run Text="{Binding Path=Expertise.ExpertiseType, StringFormat='Тип: {0}', Mode=OneWay}"/>
                            <LineBreak/>
                            <Run Text="{Binding Path=Expertise.ExpertiseStatus, StringFormat='Статус: {0}', Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Style="{x:Null}" Grid.Column="2" Text="Материалы дела" HorizontalAlignment="Center" Margin="0,0,0,5" FontSize="{StaticResource RegularFontSize}" FontWeight="Medium"/>
                        <ScrollViewer Grid.Column="2" Grid.Row="1" Margin="2,0,0,0" VerticalScrollBarVisibility="Auto">
                            <TextBlock Style="{x:Null}" Grid.Column="1" Grid.Row="1" FontSize="14" FontWeight="Normal" TextWrapping="Wrap" MaxWidth="400" >
                            <Run Text="{Binding Path=Resolution.Case.Number, StringFormat='Номер дела: {0}', Mode=OneWay}"/>
                            <LineBreak />
                            <Run Text="{Binding Path=Resolution.Case.Plaintiff, StringFormat='Истец: {0}',Mode=OneWay}"/>
                            <LineBreak />
                            <Run Text="{Binding Path=Resolution.Case.Respondent, StringFormat='Ответчик: {0}',Mode=OneWay}"/>
                            <LineBreak />
                            <Run Text="{Binding Path=Resolution.Case.Annotate, StringFormat='Аннотация: {0}', Mode=OneWay}"/>
                            <LineBreak/>
                            <Run Text="{Binding Path=Resolution.Case.Comment, StringFormat='Комментарий: {0}', Mode=OneWay}"/>
                            </TextBlock>
                        </ScrollViewer>
                        <TextBlock Style="{x:Null}" Grid.Column="4" Text="Движение экспертизы" HorizontalAlignment="Center" Margin="0,0,0,5" FontSize="{StaticResource RegularFontSize}" FontWeight="Medium"/>
                        <ScrollViewer Grid.Column="4" Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="2,0,0,0">
                            <TextBlock Style="{x:Null}" FontSize="14" FontWeight="Normal" Text="{Binding Path=Expertise.RequestSummary}" />
                        </ScrollViewer>
                        <TextBlock Style="{x:Null}" Grid.Column="6" Grid.Row="1" FontSize="{StaticResource RegularFontSize}" FontWeight="Normal" TextAlignment="Center"
                                   >
                            <Run Text="{Binding Path=Resolution.Expertisies.Count, Converter={StaticResource ExpLinkConv}, Mode=OneWay, StringFormat='Связянных экспертиз: {0}'}"
                                  ToolTipService.HasDropShadow="True" ToolTipService.ShowDuration="10000"/>
                            <LineBreak/>
                            <Run Text="{Binding Path=Resolution.Questions.Questions.Count, Mode=OneWay, StringFormat='Вопросов: {0}'}"
                                  ToolTipService.HasDropShadow="True" ToolTipService.ShowDuration="20000">
                                <Run.ToolTip>
                                    <ToolTip Style="{StaticResource CastomToolTip}" Content="{Binding Path=Resolution.QeustionsString, Mode=OneWay}"/>
                                </Run.ToolTip>
                            </Run>
                            <LineBreak/>
                            <Run Text="{Binding Path=Resolution.Objects.Objects.Count, Mode=OneWay, StringFormat='Предоставленные объекты: {0}'}"/>
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="90" Header="Номер">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="ResEx">
                            <TextBlock HorizontalAlignment="Center" Text="{Binding Path=Expertise.Number}" FontSize="18" VerticalAlignment="Center"/>
                            <DataTemplate.Triggers>
                                
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="*" Header="Эксперт">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Style="{x:Null}" Text="{Binding Path=Expertise.Expert}" FontSize="18" TextWrapping="Wrap" TextAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Width="110" Binding="{Binding Path=Expertise.StartDate, Mode=OneWay, StringFormat=d, ConverterCulture='ru-RU'}" Header="Начата">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="130" Binding="{Binding Path=Expertise.Remain, Mode=OneWay}" Header="Осталось">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Width="*" Header="Заказчик">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="Expertise">
                            <TextBlock Style="{x:Null}" Text="{Binding Path=Resolution.Customer.Requisite}" FontSize="18" VerticalAlignment="Center" TextAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <ContextMenu.Template>
                        <ControlTemplate TargetType="{x:Type ContextMenu}">
                            <Border Background="White" BorderBrush="Black" BorderThickness="1" Padding="2">
                                <ContentPresenter/>
                            </Border>
                        </ControlTemplate>
                    </ContextMenu.Template>
                    <MenuItem Header="Создать">
                        <MenuItem Header="1"/>
                        <MenuItem Header="2"/>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        <StatusBar Grid.Row="1" Grid.ColumnSpan="2" Height="30" Background="#FF6D6DFB" TextBlock.Foreground="White" 
                   TextBlock.FontSize="{StaticResource UIFontSize}">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid HorizontalAlignment="Right">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem>
                <TextBlock Style="{x:Null}" Margin="0,0,5,0" Text="{Binding Path=ExpertiseList.Count, StringFormat=Экспертиз: {0}}"/>
            </StatusBarItem>
            <StatusBarItem Grid.Column="1">
                <TextBlock Style="{x:Null}" Margin="5,0,5,0" Text="{Binding Path=ExpiredExpertise, StringFormat=Просроченных: {0}}"/>
            </StatusBarItem>
            <StatusBarItem Grid.Column="2">
                <TextBlock Style="{x:Null}" Margin="5,0,15,0" Text="{Binding Path=AttentionExpertise, StringFormat=Требующих внимания: {0}}"/>
            </StatusBarItem>
        </StatusBar>
        <Grid Grid.Column="1" Margin="0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Эксперт"/>
            <ComboBox Grid.Column="1" Style="{StaticResource UIComboBox}" ItemsSource="{Binding Path=ExpertList}" DisplayMemberPath="Employee.Fio"
                      SelectedItem="{Binding Path=QEmployee}"/>
            <TextBlock Grid.Row="1" Text="Статус"/>
            <ComboBox Grid.Column="1" Grid.Row="1" ItemsSource="{Binding Path=ExpertiseStatus}" Style="{StaticResource UIComboBox}"
                      SelectedItem="{Binding Path=QExpertiseStatus}">
                <!--<ComboBox.Style>
                    <Style TargetType="{x:Type ComboBox}">
                        <Setter Property="FontSize" Value="{StaticResource UIFontSize}"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="ItemsPanel">
                            <Setter.Value>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel IsVirtualizing ="True"/>
                                </ItemsPanelTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ComboBox}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>
                                        <ToggleButton Grid.Column="1">
                                            <ToggleButton.Template>
                                                <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                    <Border CornerRadius="3" BorderBrush="{TemplateBinding BorderBrush}">
                                                        <Path x:Name="Arrow" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                              Data="M -5 0 L 2 7 L 9 0 Z" Fill="#FF23A5CF"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </ToggleButton.Template>
                                        </ToggleButton>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ComboBox.Style>-->
            </ComboBox>
            <TextBlock Grid.Row="2" Text="Тип"/>
            <ComboBox Grid.Column="1" Grid.Row="2" Style="{StaticResource UIComboBox}" ItemsSource="{Binding Path=ExpertiseTypes}"
                      SelectedItem="{Binding Path=QExpertiseType}"/>
            <Expander Grid.Row="3" Grid.ColumnSpan="2" FontSize="{StaticResource UIFontSize}" FontWeight="Bold" Header="Период начала"
                      Margin="5" BorderThickness="2" BorderBrush="#FF0097FF">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="2,3,2,7" Height="40">
                    <DatePicker Name="dpSStartDate" FontSize="16"/>
                    <Line Stroke="Black" X1="0" Y1="17" X2="15" Y2="17" Margin="5,0" StrokeThickness="2"/>
                    <DatePicker FontSize="16" DisplayDateStart="2011-11-11"/>
                </StackPanel>
            </Expander>
            <Expander Grid.Row="4" Grid.ColumnSpan="2" FontSize="{StaticResource UIFontSize}" FontWeight="Bold" Header="Период сдачи"
                      Margin="5" BorderBrush="#FF0097FF" BorderThickness="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="2,3,2,7" Height="40">
                    <DatePicker/>
                    <Line Stroke="Black" X1="0" Y1="17" X2="15" Y2="17" Margin="5,0" StrokeThickness="2"/>
                    <DatePicker/>
                </StackPanel>
            </Expander>
            <Button Grid.Row="20" Grid.ColumnSpan="2" Style="{StaticResource BaseUIButton}" Content="Поиск" Foreground="Blue" Margin="5, 20" 
                    Command="{Binding Path=Find}"/>
        </Grid>
    </Grid>
</Window>
