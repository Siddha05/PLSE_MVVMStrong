                                                </ControlTemplate>
                                            </ToggleButton.Template>
                                        </ToggleButton>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ComboBox.Style>-->
            </ComboBox>
            <TextBlock Style="{x:Null}" FontSize="18" FontWeight="DemiBold" HorizontalAlignment="Center" Margin="0,8,0,0" VerticalAlignment="Center" 
                       Text="Тип экспертизы"/>
            <ComboBox Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" Style="{StaticResource UIComboBox}" ItemsSource="{Binding Path=ExpertiseTypes}"
                      SelectedItem="{Binding Path=QExpertiseType}" Margin="5,1"/>
            <GroupBox Header="Периоды" BorderBrush="LightGray" BorderThickness="1" Margin="5,1" FontSize="{StaticResource HeaderFontSize}" FontWeight="DemiBold">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="начата" FontSize="{StaticResource UIFontSize}" FontWeight="Normal" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="2,3,2,7" Height="40">
                        <DatePicker  SelectedDate="{Binding Path=QSStardDate}" FontSize="16" Style="{StaticResource UIDatePicker}"/>
                        <Line Stroke="Black" X1="0" Y1="17" X2="15" Y2="17" Margin="2,2" StrokeThickness="2"/>
                        <DatePicker FontSize="16" SelectedDate="{Binding Path=QEStartDate}" Style="{StaticResource UIDatePicker}"/>
                    </StackPanel>
                    <TextBlock Text="сдана" FontSize="{StaticResource UIFontSize}" FontWeight="Normal" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="2,3,2,7" Height="40">
                        <DatePicker FontSize="16" SelectedDate="{Binding Path=QSEndDate}" Style="{StaticResource UIDatePicker}"/>
                        <Line Stroke="Black" X1="0" Y1="17" X2="15" Y2="17" Margin="2,2" StrokeThickness="2"/>
                        <DatePicker FontSize="16" SelectedDate="{Binding Path=QEEndDate}" Style="{StaticResource UIDatePicker}"/>
                    </StackPanel>
                </StackPanel>

            </GroupBox>
