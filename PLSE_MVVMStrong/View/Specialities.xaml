<Window x:Class="PLSE_MVVMStrong.View.Specialities"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLSE_MVVMStrong.View"
        xmlns:vm ="clr-namespace:PLSE_MVVMStrong.ViewModel"
        mc:Ignorable="d"
        Title="Specialities" Name="sw" Width="1280" Height="700" WindowState="Maximized" WindowStyle="None">
    <Window.DataContext>
        <vm:SpecialityVM />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.5*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DataGrid AutoGenerateColumns="False" Grid.RowSpan="3" Grid.Row="1" Margin="3" CanUserAddRows="False" CanUserDeleteRows="False" ItemsSource="{Binding Path=Specialities}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Специальность" Width="3*" Binding="{Binding Path=FullTitle, Mode=OneWay}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Вид" Width="*" Binding="{Binding Path=Species, Mode=OneWay}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Категории" Width="70" Binding="{Binding Path=Categories, Mode=OneWay}" />
                <DataGridCheckBoxColumn Header="Действует?" Width="70" Binding="{Binding Path=IsValid, Mode=OneWay}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="exit" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Command="{Binding Path=Exit}"
                CommandParameter="{Binding ElementName=sw}" />
        <Canvas Grid.Column="1" Grid.Row="1">
            <Button Content="AddNew" Canvas.Left="10" Canvas.Top="10" />
            <Button Content="Delete" Canvas.Left="10" Canvas.Top="35" Width="50" Command="{Binding Path=Delete}" />
            <Button Content="Edit" Canvas.Left="10" Canvas.Top="60" Width="50" />
        </Canvas>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,5,0,5">
            <TextBox MinWidth="50" Width="219" Text="{Binding Path=SearchText}" />
            <Button Content="Find" Margin="10,0,0,0" Width="47" Command="{Binding Path=Find}" />
        </StackPanel>
        <TextBlock HorizontalAlignment="Right" Text="{Binding Path=Specialities.Count, StringFormat=Записей: {0}}" Margin="0,0,20,0" TextAlignment="Center" />
    </Grid>
</Window>